{% trans_default_domain 'admin' %}

<div class="modal-dialog">
    <div class="modal-content">
        {{ form_start(form, {'class': 'form-stacked'}) }}
        <div class="modal-header bg-primary"><h4>{{ "contact.group.update"|trans }} {{ group.name|capitalize }}</h4></div>
        <div class="modal-body">
            <div class="form-group">
                {{ form_widget(form.parent) }}
            </div>
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
            </div>
        </div>
        <div class="modal-footer text-right">
            <button class="btn btn-secondary" data-dismiss="modal"><i class="icon-cross"></i> {{ "button.close"|trans }}</button>
            {{ form_widget(form.save) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
